<Page
    x:Class="LibrelioApplication.VideoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LibrelioApplication"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" x:Name="layoutRoot">
            <MediaElement x:Name="mediaMain" AutoPlay="False"  Tapped="mediaMain_Tapped_1" CurrentStateChanged="mediaMain_CurrentStateChanged" />
        </Grid>
        <Button Content="Play" Name ="playButton" Click="playButton_Click" Grid.Row="1" HorizontalAlignment="Stretch" Background="Gray"/>
        <Button Content="Back" Click="Button_Click_1" Grid.Row="2" HorizontalAlignment="Stretch" Background="Gray"/>
    </Grid>

</Page>